{
	"nodeModulesDir": "auto",
	"imports": {
		"cheerio": "npm:cheerio@^1.2.0",
		"kuroshiro": "npm:kuroshiro@^1.2.0",
		"kuroshiro-analyzer-kuromoji": "npm:kuroshiro-analyzer-kuromoji@^1.1.0"
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-explicit-any"
			]
		}
	},
	"fmt": {
		"useTabs": true,
		"trailingCommas": "onlyMultiLine",
		"lineWidth": 120,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true,
		"proseWrap": "preserve",
		"include": [
			"src/**/*.ts"
		],
		"nextControlFlowPosition": "sameLine",
		"operatorPosition": "nextLine",
		"singleBodyPosition": "nextLine",
		"typeLiteral.separatorKind": "semiColon",
		"useBraces": "preferNone"
	}
}